<!-- This example requires Tailwind CSS v2.0+ -->
<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <div class="px-4 py-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        <%= @employee.decorate.display_name %>
      </h1>
    </div>
    <div class="flex mt-4 sm:mt-0 sm:ml-4">
      <%= link_to "Edit", edit_employee_path(@employee), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
</main>
