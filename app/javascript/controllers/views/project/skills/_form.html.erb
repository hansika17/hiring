  <!-- Left column -->
  <div class="grid grid-cols-1 gap-4 lg:col-span-2">
    <section aria-labelledby="participants_section">
      <div class="overflow-hidden bg-white">
        <div class="p-4">
          <div class="flex flex-wrap">
            <p class="pb-2 mt-1 text-sm font-medium text-gray-900 truncate"><%= "Project Skills" %></p>
          </div>
          <div id="project-skills" class="flex ml-4 flex-wrap">
            <%= render partial: "skills", locals: { skills: skills, project: project, user: user }, cached: true %>
          </div>
        </div>
      </div>
    </section>
  </div>
  <% if policy([project, Skill]).create? %>
    <!-- Right column -->
    <div class="grid grid-cols-1 gap-4 xl:border-l xl:border-gray-200">
      <section aria-labelledby="add-participant-section">
