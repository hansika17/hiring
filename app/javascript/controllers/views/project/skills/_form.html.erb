              <div class="flex justify-center w-full max-w-sm lg:justify-end"  data-behavior="autocomplete" data-controller="nav-search" data-nav-search-url-value="/search/project/skills?id=<%= project.id %>">
                <div class="w-full max-w-sm lg:max-w-sm">
                  <div>
                    <label for="skill" class="block text-sm font-medium text-gray-700">Search to add new skill</label>
