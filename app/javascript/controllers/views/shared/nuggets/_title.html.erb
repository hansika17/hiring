<div class="flex-1 min-w-0" id="title">
  <h3 class="text-2xl font-bold leading-tight text-gray-900">
    <%= nugget.display_title %>
  </h3>
  <div class="flex mt-4 space-x-2">
    <div class="flex-shrink-0">
      <%= image_tag "male-placeholder-image.png", class: "w-10 h-10 rounded-full" %>
    </div>
    <div>
      <div class="text-sm">
        <a href="<%= nuggets_path %>" class="font-medium text-gray-900 hover:underline"><%= nugget.user.display_name %></a>
        <% if policy([Nugget]).show? %>
          <% if nugget.published? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <%= "Published" %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              <%= "In Review" %>
            </span>
          <% end %>
        <% end %>
      </div>
      <div class="mt-1 space-x-2 text-sm">
        <span class="font-medium text-gray-500">Created By <%= nugget.user.decorate.display_name %> for <%= nugget.skill.name %> on <%= display_created_at(nugget) %> </span>
      </div>
    </div>
  </div>
</div>
