<main class="max-w-6xl px-4 pb-12 mx-auto space-y-6 lg:pb-16">
  <div class="px-4">
    <%= tailwind_form_with(model: @milestone, id: dom_id(@milestone), url: project_milestone_path(@project, @milestone), method: :patch) do |form| %>
      <main class="w-full px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
        <%= render "shared/form_messages", resource: @milestone, message: local_assigns[:message] %>
        <%= render "shared/form_header", title: "Edit Milestone for #{@project.name}", subtitle: "Edit details of Milestone" %>
        <%= form.text_field :title, "Title", autocomplete: "off" %>
        <div>
          <label for="date" class="block text-sm font-medium text-gray-700">
            Deadline
          </label>
          <%= form.date_field :deadline, class: "form-text-field mt-1" %>
        </div>
        <%= form.rich_text_area :body, "Description" %>
        <div class="flex justify-end">
          <%= link_to "Back", "javascript:history.back()", class: "btn-normal" %>
          <%= form.submit "Edit Milestone", class: "btn-blue" %>
        </div>
      </main>
    <% end %>
  </div>
</main>
