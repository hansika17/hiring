<tr id="<%= dom_id kb %>">
  <% kb = kb.decorate %>
  <td class="table-cell">
    <div class="text-sm">
      <a href="<%= ensure_protocol(kb.link) %>" target="_blank"  class="font-medium text-gray-900 block hover:underline" target="_top">
        <%= kb.document %>
      </a>
    </div>
    <div class="mt-1 text-sm text-gray-700">
      <p class="line-clamp-3"><%= kb.comments %></p>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap ">
    <div class=" text-sm text-gray-700">
      <p class="line-clamp-1">
        <a href="#" class="block hover:underline " target="_top">
          <%= kb.user.display_name %>
        </a>
      </p>
    </div>
  </td>
  <td class="table-cell whitespace-nowrap">
    <div class=" text-sm text-gray-700">
      <p class=""> <%= kb.discipline ? kb.discipline.name : "Everyone" %></p>
    </div>
  </td>
  <td class="table-cell  whitespace-nowrap">
    <div class=" text-sm text-gray-700">
      <p class=""> <%= kb.job ? kb.job.name : "Everyone" %></p>
    </div>
  </td>
</tr>
