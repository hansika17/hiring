<%= tailwind_form_with(model: feedback, id: dom_id(feedback), url: project_feedbacks_path(@project)) do |form| %>
  <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16">
    <%= render "shared/form_messages", resource: feedback, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Add New Feedback", subtitle: "Feedback can be added in this project which can be about performace or participants or feedbacks given by client." %>
    <%= form.text_field :title, "Title" %>
    <%= form.rich_text_area :body, "Feedback" %>
    <div class="flex justify-end">
      <%= form.submit "Add Feedback", class: "btn-blue" %>
    </div>
  </main>
<% end %>
