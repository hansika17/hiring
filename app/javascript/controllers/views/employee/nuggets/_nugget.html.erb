<tr id="<%= dom_id(nugget) %>">
  <% nugget = nugget.decorate %>
  <td class="w-full table-cell">
    <a href="<%= employee_nugget_path(@employee, nugget) %>" , class="truncate hover:text-gray-600 hover:underline">
      <span class="text-gray-900 block whitespace-normal ">
        <%= nugget.display_title %>
      </span>
    </a>
  </td>
  <td class="table-cell">
    <span class="inline-flex px-2 text-xs font-semibold text-left leading-5 text-gray-800 bg-gray-100 rounded-full">
      <%= nugget.skill.name.upcase_first %>
    </span>
  </td>
  <td class="table-cell">
    <% if nugget.read? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
        read
      </span>
    <% else %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
        Unread
      </span>
    <% end %>
  </td>
</tr>
