<main class="relative z-0 flex-1 overflow-y-auto focus:outline-none">
  <%= render partial: "survey/title", locals: { survey: @survey } %>
  <main class="pb-8">
    <div class="">
      <!-- Main 3 column grid -->
      <div class="grid items-start grid-cols-1  lg:grid-cols-3 ">
        <!-- Left column -->
        <div class="grid grid-cols-1 gap-4 lg:col-span-2 " data-controller="infinite-scroll">
          <section aria-labelledby="participants_section">
            <div class="overflow-hidden bg-white">
              <div class="p-4", id="project-participants">
                <div class="flex flex-wrap">
                  <p class="pb-4 mt-1 text-sm font-medium text-gray-900 truncate"><%= "Survey Questions" %></p>
                </div>
                <ul class="divide-y divide-gray-200" id="questions" data-infinite-scroll-target="entries">
                  <%= render partial: "question", collection: @questions, as: :question, cached: true %>
                </ul>
                <div class="justify-end invisible mt-2 mb-6 mr-2" data-infinite-scroll-target="pagination">
                  <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
                </div>
              </div>
            </div>
          </section>
        </div>
        <% if policy([:surveys]).create? %>
          <!-- Right column -->
          <div class="grid grid-cols-1 gap-4 xl:border-l xl:border-gray-200">
            <section aria-labelledby="add-participant-section">
              <div class="overflow-hidden bg-white">
                <div class="px-4">
                  <%= render partial: "survey/questions/form", locals: { survey: @survey, question: @question, question_categories: @question_categories } %>
                </div>
              </div>
            </section>
          </div>
        <% end %>
      </div>
    </div>
  </main>
  <div class="pt-4 pl-16 pr-16">
  </div>
</main>
