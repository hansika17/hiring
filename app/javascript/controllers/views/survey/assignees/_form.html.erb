<section aria-labelledby="add-participant-section" id="add-assignee">
  <div class="bg-white">
    <div class="px-4">
      <main class="max-w-lg px-4 pt-6 pb-12 mx-auto space-y-6 lg:pb-16 z-10">
        <%= render "shared/form_header", title: "Assign KPI to #{survey.survey_for == "user" ? "Employee" : "Project"}", subtitle: "" %>
        <%= render "shared/form_messages", resource: survey, message: local_assigns[:message] %>
        <div class="flex justify-center w-full max-w-sm lg:justify-end" >
          <div class="w-full max-w-sm lg:max-w-sm">
            <label for="skill" class="block text-sm font-medium text-gray-700"></label>
            <div class="mt-1">
              <%= tailwind_form_with(url: survey_assignees_path(survey), method: "post") do |f| %>
                <%= f.collection_select(:assign_id, assigns.decorate, :id, :display_name, { :prompt => "Select Assignee" }, :class => "form-text-field mt-1") %>
                <div class="flex justify-end  mt-1 w-full">
                  <button type="submit" class="mt-4  inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Add Assignee
                  </button>
                </div>
              <% end %>
            </div>
            <div class="relative">
              <div class="absolute left-0 z-10 block w-full mt-2 origin-top-right bg-white rounded-md shadow-lg ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                <ul data-nav-search-target="results">
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</section>
</div>
